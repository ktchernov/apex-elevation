<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/activity_elevation"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorPrimaryDark"
	tools:context="io.github.ktchernov.simpleelevation.ElevationActivity">

	<TextView
		android:id="@+id/elevation_text_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="@style/ElevationTextAppearance"
		android:text="@string/no_signal_elevation_placeholder"
		app:layout_constraintBottom_toBottomOf="@+id/activity_elevation"
		app:layout_constraintLeft_toLeftOf="@+id/activity_elevation"
		app:layout_constraintRight_toRightOf="@+id/activity_elevation"
		app:layout_constraintTop_toTopOf="@+id/activity_elevation"/>

</android.support.constraint.ConstraintLayout>
